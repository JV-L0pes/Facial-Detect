# Configurações de ambiente para Docker
# Este arquivo é usado pelo docker-compose.yml

# Configurações de Segurança
SECRET_KEY=docker_secret_key_change_in_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Configurações do Banco de Dados
DATABASE_URL=sqlite:///./data/database.db

# Configurações de Detecção Facial
FACE_DETECTION_CONFIDENCE=0.25
FACE_DETECTION_CONFIDENCE_HIGH=0.5
FACE_RECOGNITION_THRESHOLD=0.4
MIN_FACE_SIZE=50
MAX_FACE_SIZE=1000

# Configurações de Qualidade da Face
MIN_FACE_QUALITY_SCORE=0.3

# Configurações de GPU
USE_GPU=true
CUDA_DEVICE_ID=0

# Configurações de Log
LOG_LEVEL=INFO
LOG_FILE=data/logs/app.log

# Configurações de Liveness
LIVENESS_FRAMES_REQUIRED=3
MOVEMENT_THRESHOLD=5.0
TEXTURE_VARIANCE_THRESHOLD=100.0
BLINK_DETECTION_ENABLED=true
EYE_ASPECT_RATIO_THRESHOLD=0.25
